<Window x:Class="FasType.Windows.SeeAllWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FasType.Windows"
        xmlns:vm="clr-namespace:FasType.ViewModels"
        WindowStyle="ToolWindow"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="All Abbreviations" Height="300" Width="300">


    <Window.Resources>
        <DataTemplate x:Key="FirstDisplayTemplate">
            <StackPanel>
                <Separator Margin="0"/>
                <TextBlock Text="{Binding ComplexRepresentation}" TextAlignment="Center" Margin="5"/>
            </StackPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="DisplayTemplate">
            <StackPanel x:Name="Panel">
                <Separator Margin="10, 0"/>
                <TextBlock Text="{Binding ComplexRepresentation}" TextAlignment="Center" Margin="5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LastDisplayTemplate">
            <StackPanel x:Name="Panel">
                <Separator Margin="10, 0"/>
                <TextBlock Text="{Binding ComplexRepresentation}" TextAlignment="Center" Margin="5"/>
                <Separator Margin="0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" 
                  VerticalScrollBarVisibility="Auto">
        <ItemsControl x:Name="Control" ItemsSource="{Binding AllAbbreviations}" AlternationCount="{Binding Count}">
            <ItemsControl.ItemTemplateSelector>
                <vm:SeeAllSelector First="{StaticResource FirstDisplayTemplate}"
                                   Default="{StaticResource DisplayTemplate}"
                                   Last="{StaticResource LastDisplayTemplate}"
                                   Control="{x:Reference Control}"/>
            </ItemsControl.ItemTemplateSelector>
        </ItemsControl>
            

    </ScrollViewer>
</Window>
